
@{
  Layout = "_Layout";
}

@using PierrsTreatFlavor.Models; 
@model PierrsTreatFlavor.Models.Flavor;
<hr/>
<h3>Flavor name: @Html.DisplayFor(model=>model.FlavorName) Date expiration: @Html.DisplayFor(model=>model.FlavorDateExpiration),Price: @Html.DisplayFor(model=>model.FlavorPrice)</h3>
 <ul>
    @if(@Model.Treats.Count == 0)
    {
        <p>no treats found </p>
    }
    else
    {
        <h3>Treats that belong to Pet:</h3>
         @foreach(var join in Model.Treats)
        {
             <h3><li>Treat: @join.Treat.TreatName Date of produced: @join.Treat.TreatBakedDate, Type of treat: @join.Treat.TreatType</li></h3> 
             @using (Html.BeginForm("DeleteCustomer","flavors"))
             {
                 @Html.Hidden("TreatFlavorId",@join.TreatFlavorId)
                 <input type="submit" value="Delete">
             }

        }
    }
</ul>
<hr /> 


<h3>@Html.ActionLink("Back to list", "Index")</h3>
<p>@Html.ActionLink("Add a Treat", "AddTreat", new { id = Model.PetId })</p>
<h3>@Html.ActionLink("Update Flavor", "Update", new { updateID = Model.PetId })</h3>
<h3>@Html.ActionLink("Delete Flavor", "Delete", new { deleteID = Model.PetId })</h3>
<h3>@Html.ActionLink("Add new Flavor","Create","Flavors")</h3>
<h3>@Html.ActionLink("Back To Main Page ","Index","Home")</h3>













