@{
  Layout = "_Layout";
}

@using PierrsTreatFlavor.Models;
@model List<PierrsTreatFlavor.Models.Treat>;
<center>
<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 

@foreach (Treat treats in Model)
{
  <h3><li>@Html.ActionLink($"{treats.TreatName}", "read", new { id = treats.TreatId })</li></h3>
}
<hr/>
<h3>@Html.ActionLink("Add new customer", "Create","Treats")</h3>

<h3>@Html.ActionLink("Home", "Index", "Home")</h3>
</center>