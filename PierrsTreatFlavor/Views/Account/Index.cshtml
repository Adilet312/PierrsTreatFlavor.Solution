@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h3>Authentication with Identity</h3>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <h3>Hello @User.Identity.Name!</h3>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <h3><input type="submit" class="btn btn-default" value="Log out" /> </h3>
    }
}
else
{
    <hr/>
    <h3>@Html.ActionLink("Register", "Register")</h3>
    <h3>@Html.ActionLink("Log in", "Login")</h3>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
}

